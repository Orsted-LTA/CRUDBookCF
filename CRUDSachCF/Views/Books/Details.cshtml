@model CRUDSachCF.Models.Book

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white text-center">
            <h4>Chi tiết sách</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Thông tin sách bên trái -->
                <div class="col-md-6">
                    <h4>@Model.Title</h4>
                    <br/>
                    <p><strong>Tác giả:</strong> @Model.Author</p>
                    <p><strong>Mô tả:</strong> @Model.Description</p>
                    <p><strong>Giá:</strong> @Model.Price.ToString("N0") VND</p>
                </div>
                <!-- Hình ảnh sách bên phải -->
                <div class="col-md-6 text-center">
                    @if (Model.ImagePath != null)
                    {
                        <img src="@Model.ImagePath" class="img-fluid rounded" alt="Book Image" />
                    }
                    else
                    {
                        <div class="border d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span>Không có hình ảnh</span>
                        </div>
                    }
                </div>
            </div>
            <div class="mt-3 text-center">
                <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>
